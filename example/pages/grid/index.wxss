@import "../../components/grid/index.wxss";


.rv-row {
    padding: 10px 0;
    background-color: #f5f5f5;
}
.demo-col {
    font-size: 14px;
    font-weight: 400;
    text-align: center;
    height: 30px;
    line-height: 30px;
    background-color: rgba(0,160,233,.7);
    color: white;
    transition: all .5s;
}
.demo-col:active {
    box-shadow: 0 5px 5px 0 rgba(0,0,0,.26);
}
.higher-col {
    height: 40px;
    line-height: 40px;
}
.dark-bg {
    background-color: #00a0e9;
}
.title {
    font-size: 18px;
    color: #314659;
    margin-bottom: 10px;
}
.sub-text {
    font-size: 12px;
    color: rgba(0,0,0,.65);
}